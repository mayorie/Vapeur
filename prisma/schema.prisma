datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Editeur {
  id    Int    @id @default(autoincrement())
  nom   String @unique
  jeux  Jeu[]
}

model Genre {
  id    Int @id @default(autoincrement())
  nom   String @unique
  jeux  JeuGenre[]
}

model Jeu {
  id             Int       @id @default(autoincrement())
  titre          String
  description    String
  dateSortie     DateTime
  misEnAvant     Boolean   @default(false)
  lien           String?

  editeurId      Int
  editeur        Editeur   @relation(fields: [editeurId], references: [id])

  genres         JeuGenre[]
}

model JeuGenre {
  jeuId   Int
  genreId Int

  jeu     Jeu   @relation(fields: [jeuId], references: [id])
  genre   Genre @relation(fields: [genreId], references: [id])

  @@id([jeuId, genreId])
}
