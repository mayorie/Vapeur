<h1>{{genre.name}}</h1>

<h2>Jeux de ce genre</h2>

{{#if genre.games.length}}
  <ul>
    {{#each genre.games}}
      <li>
        <a href="/games/{{this.id}}">{{this.title}}</a>
        ({{this.publisher.name}})
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>Il n'y a pas encore de jeux pour ce genre.</p>
{{/if}}
